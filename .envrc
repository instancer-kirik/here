# Development environment for here - Universal Package Manager
# This file is used by direnv to set up the development environment

# Add zig-out/bin to PATH for testing the built binary
export PATH="$PWD/zig-out/bin:$PATH"

# Set up Zig development environment
export ZIG_GLOBAL_CACHE_DIR="$PWD/.zig-cache"

# Development flags
export HERE_DEV_MODE=1
export HERE_DEBUG=1

# Colors for development output
export FORCE_COLOR=1
export CLICOLOR_FORCE=1

# Local test directory for package profiles
export HERE_TEST_DIR="$PWD/test-profiles"
mkdir -p "$HERE_TEST_DIR"

echo "üè† here development environment loaded"
echo "üí° Run 'zig build' to build the project"
echo "üß™ Run 'here --help' to test the built binary"
